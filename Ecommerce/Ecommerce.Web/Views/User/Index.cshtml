@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/assets/css/material-kit.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'DM Sans' !important;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #e0ecf5;
        }

        .card {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 450px;
        }

        .form-toggle {
            margin-top: 10px;
            text-decoration: underline;
            cursor: pointer;
        }

        .hidden {
            display: none;
        }

        .inputtext {
            box-shadow: none !important;
            display: inline-block;
            background-color: #f2f2f2 !important;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
            line-height: 21px;
            outline: none;
            border: 1px solid lightgray
        }

        .width-md{
            width:70%;
        }

        .form-control{
            background: fixed;
        }

        .signin-btn-primary {
            color: #fff !important;
            background-color: #62A70F !important;
            border-color: #62A70F !important;
        }

        .text-color {
            color: #78c718 !important;
        }

        .textright {
            text-align: right;
        }

        label {
            color: black;
        }

       .avatar {
            color: #fff;
            margin: 0 auto 10px;
            text-align: center;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            z-index: 9;
            background: #62A70F;
            padding: 15px;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
            
        }

         .avatar i {
            font-size: 62px;
            }

        @@media only screen and (max-width: 700px){
            .textright {
                text-align: left;
            }
        }

.loader {
    border: 16px solid #f3f3f3;
    border-top: 16px solid #3498db;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    animation: spin 2s linear infinite;
    top: 55%;
    position: absolute;
    z-index: 9999;
    right: 50%;
    display: none;
}

@@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}


    </style>
</head>
<body>
<div class="loader"></div>
    <div class="card" id="lgnCard">
        <div class="avatar"><i class="material-icons"></i></div>
        <h3 class="card-title text-center">Sign in</h3>
        <form id="lgnForm">
            <div class="form-group mt-3 text-center">
                <input type="text" class="form-control form-control-lg inputtext width-md" id="lgnUsername" placeholder="Username" name="username" maxlength="255" autofocus required>
            </div>
            <div class="form-group mt-3 text-center">
                <input type="password" class="form-control form-control-lg inputtext width-md" id="lgnPassword" placeholder="Password" name="password" minlength="6" required>
            </div>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 p-0 mt-3 text-center">
                <button type="submit" class="btn btn-primary signin-btn-primary col-6 col-md-4 col-lg-4 col-xl-4 p-2 mt-1">Sign In</button>
            </div>
        </form>
        <div class="text-center text-color mt-3">Don't have an account? <span class="form-toggle text-color" onclick="toggleForm()">Create one.</span></div>
    </div>

    <div class="card hidden" id="regCard">
        <div class="avatar"><i class="material-icons"></i></div>
        <h3 class="card-title text-center m-3">Registration</h3>
        <form id="regForm">
            <div class="mb-3 text-center">
                <input type="text" class="form-control inputtext width-md" id="regUsername" placeholder="Username" name="username" maxlength="255" required>
            </div>
            <div class="mb-3 text-center">
                <input type="email" class="form-control inputtext width-md" id="regEmail" placeholder="Email" name="email" maxlength="255" required>
            </div>
            <div class="mb-3 text-center">
                <input type="password" class="form-control inputtext width-md" id="regPassword" placeholder="Password" name="password" minlength="6" required>
            </div>
            <div class="mb-3 text-center">
                <input type="password" class="form-control inputtext width-md" id="regConfirmPassword" placeholder="Confirm Password" name="confirmPassword" required>
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary signin-btn-primary col-6 col-md-4 col-lg-4 col-xl-4 p-2 mt-1">Register</button>
            </div>
        </form>
        <div class="text-center">
            <div class="form-toggle text-center text-color mt-0" onclick="toggleForm()">Back to Login</div>
        </div>
    </div>

    <!-- Bootstrap JS (optional for dropdowns, modals, etc.) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script src="~/js/login.js"></script>

</body>
</html>
