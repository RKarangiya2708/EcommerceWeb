@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = Context.Session.GetInt32("IsAdmin");
}

<style>
    .card-plain {
        width: 1100px;
    }

    .main-raised {
        margin-top:40px;
    }

    #productTable_wrapper{
        margin:10px;
    }

    .dataTables_info{
        display:none;
    }
    label{
        color:black !important;
    }

</style>

    <input type="hidden" id="isAdmin" value="@isAdmin" />
    <div>
        <div class="container">
            <div class="card card-plain">
            <div class="card-body main main-raised">
                <h3 class="card-title m-3">Products</h3>
                <hr />
                @if (isAdmin == 1)
                {
                    <!-- Button to Open Modal -->
                    <button type="button" class="btn signin-btn-primary mb-3 ml-2" data-bs-toggle="modal" data-bs-target="#productModal">
                        Add New Product
                    </button>
                }
                <div class="table-responsive">
                        <div class="table table-shopping">
                        <table id="productTable" class="table table-bordered">
                            <thead class="thead-light">
                                    <tr>
                                    <th class="fw-bold">Name</th>
                                    <th class="fw-bold">Description</th>
                                    <th class="fw-bold">Price</th>
                                    <th class="fw-bold">Stock</th>
                                    <th class="fw-bold">Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data rows will be inserted here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 

<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header p-3">
                <h3 class="modal-title fw-bold m-0" id="productModalLabel">Add New Product</h3>
                <button type="button" class="btn-close mt-1 mx-1" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="price" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="stock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn signin-btn-primary">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header p-3">
                <h3 class="modal-title fw-bold m-0" id="productModalLabel">Edit Product</h3>
                <button type="button" class="btn-close mt-1 mx-1" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productEditForm" novalidate>
                    <input type="hidden" class="form-control" id="editId" required>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="editName" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="editPrice" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="editStock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn signin-btn-primary">Edit Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/product.js"></script>
